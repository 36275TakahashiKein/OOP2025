<Window x:Class="TenkiApp.LatLonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="緯度経度入力" Height="200" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#121212">

    <StackPanel Margin="16">
        <!-- タイトルバー代わりのラベル -->
        <TextBlock Text="緯度経度入力" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

        <TextBlock Text="緯度:" Foreground="White"/>
        <TextBox x:Name="LatitudeBox" Margin="0,4,0,12"/>

        <TextBlock Text="経度:" Foreground="White"/>
        <TextBox x:Name="LongitudeBox" Margin="0,4,0,16"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="キャンセル" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>

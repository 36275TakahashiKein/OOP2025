<Window x:Class="Test04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test04"
        mc:Ignorable="d"
        Title="天気予報" Height="500" Width="400" Background="{DynamicResource AppBackground}">

    <!-- リソース定義 -->
    <Window.Resources>
        <!-- 背景色など -->
        <SolidColorBrush x:Key="AppBackground" Color="#121212"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#B0B0B0"/>

        <!-- ボタン用カラー -->
        <SolidColorBrush x:Key="AccentBrush" Color="#3A9BDC"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#5AB0F5"/>
        <SolidColorBrush x:Key="ButtonTextBrush" Color="#FFFFFF"/>

        <!-- モダンボタンスタイル -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- ホバー時 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <!-- 押下時 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- レイアウト -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 検索バー -->
        <DockPanel Grid.Row="0">
            <TextBox Width="220" Margin="0,0,8,0" Foreground="{StaticResource PrimaryText}"
                     Background="{StaticResource CardBackground}" Padding="8"
                     Text="{Binding PlaceQuery, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="地名で検索" Width="100" Click="SearchPlace_Click"
                    Style="{StaticResource ModernButton}"/>
        </DockPanel>

        <!-- スペーサー -->
        <Border Grid.Row="1"/>

        <!-- 天気カード -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Width="96" Height="96" Source="{Binding WeatherImage}" />

                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Status}" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                    <TextBlock Text="現在の天気" Foreground="{StaticResource PrimaryText}" FontSize="18" FontWeight="Bold" Margin="0,8,0,4"/>
                    <StackPanel Orientation="Vertical" Margin="0,4,0,0">
                        <TextBlock Foreground="{StaticResource PrimaryText}" FontSize="16"
                                   Text="{Binding Temperature, StringFormat=気温: {0:F1} °C}"/>
                        <TextBlock Foreground="{StaticResource PrimaryText}" FontSize="16"
                                   Text="{Binding Humidity, StringFormat=湿度: {0:F0} %}"/>
                        <TextBlock Foreground="{StaticResource PrimaryText}" FontSize="16"
                                   Text="{Binding Precipitation, StringFormat=降水量: {0:F2} mm}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 操作ボタン -->
        <!-- 操作ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <!-- 現在地ボタン（アイコン付き） -->
            <Button Click="CurrentLocation_Click" Style="{StaticResource ModernButton}" Width="140">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="Images/location.png" Width="16" Height="16" Margin="0,0,6,0"/>
                    <TextBlock Text="現在地" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- 緯度経度ボタン（地球儀アイコン付き） -->
            <Button Click="LatLon_Click" Style="{StaticResource ModernButton}" Width="160">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Images/globe.png" Width="16" Height="16"/>

                    <TextBlock Text="緯度経度で検索" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>

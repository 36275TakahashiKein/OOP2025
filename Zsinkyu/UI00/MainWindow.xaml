<Window x:Class="UI00.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Command Center Monitor"
        Height="720" Width="1280"
        Background="#252526">

    <Window.Resources>

        <!-- ▼ HUDカラー（アクセント） -->
        <Color x:Key="AccentBlue">#00C8FF</Color>
        <Color x:Key="AccentEmerald">#00FFB0</Color>
        <Color x:Key="AccentOrange">#FF8A2B</Color>

        <!-- ▼ パネル背景 -->
        <SolidColorBrush x:Key="PanelBG" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#22FFFFFF"/>

        <!-- ▼ フォント色 -->
        <SolidColorBrush x:Key="PrimaryText" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="HeaderText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="WeakText" Color="#8A8A8A"/>

        <!-- ▼ Border スタイル（HUD発光風） -->
        <Style x:Key="HudPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBG}"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="{StaticResource AccentBlue}" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00C8FF" BlurRadius="8" ShadowDepth="0" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ▼ DataGrid HUD テーマ -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#D0D0D0"/>
            <Setter Property="BorderBrush" Value="#00C8FF33"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#2E2E2E"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#00C8FF33"/>
            <Setter Property="VerticalGridLinesBrush" Value="#00C8FF33"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- DataGrid ヘッダー -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#003040"/>
            <Setter Property="Foreground" Value="#00C8FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#00C8FF55"/>
            <Setter Property="BorderThickness" Value="0 0 1 1"/>
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- タイトルバー -->
        <TextBlock Text="COMMAND CENTER MONITOR"
                   Grid.ColumnSpan="2"
                   FontSize="28"
                   Foreground="#00C8FF"
                   Margin="0 0 0 10"/>

        <!-- 左：ログ一覧 -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource HudPanel}">
            <DataGrid x:Name="LogGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Time}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Attack}" Width="*"/>
                    <DataGridTextColumn Header="Source IP" Binding="{Binding IP}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 右：円グラフ（ステータス） -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource HudPanel}">
            <StackPanel>
                <TextBlock Text="STATUS DISTRIBUTION"
                           Foreground="#00FFB0" FontSize="16"
                           Margin="0 0 0 8"/>

                <lvc:PieChart Series="{Binding PieSeries}"
                              LegendLocation="Right"
                              Foreground="#D0D0D0"
                              Background="Transparent"
                              InnerRadius="30"
                              Height="250"/>

                <!-- ステータス表 -->
                <ItemsControl ItemsSource="{Binding StatusTable}" Margin="0 10 0 0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="0 4">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="#D0D0D0" Width="80"/>
                                <TextBlock Text="{Binding Count}"
                                           Foreground="#00C8FF" FontWeight="Bold"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- 下部：イベント数推移グラフ -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource HudPanel}" Margin="0 10 0 0">
            <StackPanel>
                <TextBlock Text="EVENTS OVER TIME"
                           Foreground="#00C8FF" FontSize="16" Margin="0 0 0 8"/>

                <lvc:CartesianChart Series="{Binding TimeSeries}"
                                    Background="Transparent"
                                    LegendLocation="Right" Height="200">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding TimeLabels}" Foreground="#D0D0D0"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Events" Foreground="#D0D0D0"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </StackPanel>
        </Border>

    </Grid>
</Window>
